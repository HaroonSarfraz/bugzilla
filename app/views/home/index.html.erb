<div class="jumbotron" , style="padding-left:40px;" ng-app>
  <% if user_signed_in? %>
    <h1>Welcome to BUGZILLA</h1>
    <p class="lead">
      Here u can create projects and manage your project features and bugs easily.
    </p>
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => 'btn btn-large btn-danger' %>
  <% else %>
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
      <div class="span6" , style="float:left;margin-left:10%;">
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
      </div>
      <div class="span6" , style="float:left;margin-left:40%;">
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
